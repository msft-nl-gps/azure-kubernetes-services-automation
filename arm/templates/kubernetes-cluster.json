{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusterName": {
            "type": "string"
        },
        "clusterIdentity": {
            "type": "string"
        },
        "clusterSku": {
            "type": "object"
        },
        "kubernetesVersion": {
            "type": "string"
        },
        "autoUpgradeProfile": {
            "type": "object"
        },
        "adminGroupObjectIDs": {
            "type": "array"
        },
        "nodeResourceGroup": {
            "type": "string"
        },
        "subnetResourceId": {
            "type": "string"
        },
        "logAnalyticsWorkspaceResourceId": {
            "type": "string"
        },
        "publicIPAddressResourceId": {
            "type": "string"
        },
        "systemPoolVMSize": {
            "type": "string"
        },
        "ingressApplicationGatewayResourceId": {
            "type": "string"
        },
        "ingressApplicationGatewayUserDefinedManagedIdentityId": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerService/managedClusters",
            "apiVersion": "2023-02-01",
            "name": "[parameters('clusterName')]",
            "location": "[resourceGroup().location]",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[parameters('clusterIdentity')]": {}
                }
            },
            "sku": "[parameters('clusterSku')]",
            "properties": {
                "kubernetesVersion": "[parameters('kubernetesVersion')]",
                "autoUpgradeProfile": "[parameters('autoUpgradeProfile')]",
                "enableRBAC": true,
                "supportPlan": "KubernetesOfficial",
                "aadProfile": {
                    "adminGroupObjectIDs": "[parameters('adminGroupObjectIDs')]",
                    "enableAzureRBAC": true,
                    "managed": true,
                    "tenantID": "[subscription().tenantId]"
                },
                "disableLocalAccounts": true,
                "dnsPrefix": "[parameters('clusterName')]",
                "nodeResourceGroup": "[parameters('nodeResourceGroup')]",
                "agentPoolProfiles": [
                    {
                        "name": "systempool",
                        "osDiskSizeGB": 128,
                        "count": 2,
                        "enableAutoScaling": true,
                        "minCount": 2,
                        "maxCount": 5,
                        "vmSize": "[parameters('systemPoolVMSize')]",
                        "osType": "Linux",
                        "osSKU": "Ubuntu",
                        "storageProfile": "ManagedDisks",
                        "type": "VirtualMachineScaleSets",
                        "mode": "System",
                        "maxPods": 110,
                        "availabilityZones": [
                            "1",
                            "2",
                            "3"
                        ],
                        "nodeTaints": [
                            "CriticalAddonsOnly=true:NoSchedule"
                        ],
                        "enableNodePublicIP": false,
                        "tags": {},
                        "vnetSubnetID": "[parameters('subnetResourceId')]"
                    }

                ],
                "addonProfiles": {
                    "omsAgent": {
                        "enabled": true,
                        "config": {
                            "logAnalyticsWorkspaceResourceID": "[parameters('logAnalyticsWorkspaceResourceId')]"
                        }
                    },
                    "azureKeyvaultSecretsProvider": {
                        "enabled": true,
                        "config": {
                            "enableSecretRotation": "false",
                            "rotationPollInterval": "2m"
                        }
                    },
                    "azurepolicy": {
                        "enabled": true
                    },
                    "httpApplicationRouting": {
                        "enabled": false
                    },
                    "ingressApplicationGateway": {
                        "enabled": true,
                        "config": {
                            "applicationGatewayId": "[parameters('ingressApplicationGatewayResourceId')]"
                        },
                        "identity": {
                            "clientId": "[reference(parameters('ingressApplicationGatewayUserDefinedManagedIdentityId'), '2023-01-31').clientId]",
                            "objectId": "[reference(parameters('ingressApplicationGatewayUserDefinedManagedIdentityId'), '2023-01-31').principalId]",
                            "resourceId": "[parameters('ingressApplicationGatewayUserDefinedManagedIdentityId')]"
                        }
                    },
                    "networkProfile": {
                        "networkPlugin": "azure",
                        "networkPolicy": "azure",
                        "networkDataplane": "azure",
                        "loadBalancerSku": "Standard",
                        "loadBalancerProfile": {
                            "managedOutboundIPs": {
                                "count": 1
                            },
                            "effectiveOutboundIPs": [
                                {
                                    "id": "[parameters('publicIPAddressResourceId')]"
                                }
                            ],
                            "backendPoolType": "nodeIPConfiguration"
                        },
                        "serviceCidr": "11.0.0.0/16",
                        "dnsServiceIP": "11.0.0.10",
                        "outboundType": "loadBalancer",
                        "serviceCidrs": [
                            "11.0.0.0/16"
                        ],
                        "ipFamilies": [
                            "IPv4"
                        ]
                    }
                }
            }
        }
    ],
    "outputs": {
        "aks-cluster-id": {
            "type": "string",
            "value": "[resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName'))]"
        },
        "aks-cluster-api-server-address": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName'))).fqdn]"
        }
    }
}