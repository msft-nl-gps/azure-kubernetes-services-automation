{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "aagName": {
            "type": "string"
        },
        "skuName": {
            "type": "string"
        },
        "skuTier": {
            "type": "string"
        },
        "subnetId": {
            "type": "string"
        },
        "publicIPId": {
            "type": "string"
        },
        "autoscaleMinCapacity": {
            "type": "int"
        },
        "autoscaleMaxCapacity": {
            "type": "int"
        },
        "frontEndPorts": {
            "type": "array"
        },
        "gatewayIPConfigurationName": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "applicationGatewayId": "[resourceId('Microsoft.Network/applicationGateways', parameters('aagName')) ]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/applicationGateways",
            "apiVersion": "2023-05-01",
            "name": "[parameters('aagName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "managed-by-k8s-ingress": "true"
            },
            "properties": {
                "sku": {
                    "name": "[parameters('skuName')]",
                    "tier": "[parameters('skuTier')]"
                },
                "gatewayIPConfigurations": [
                    {
                        "name": "[parameters('gatewayIPConfigurationName')]",
                        "properties": {
                            "subnet": {
                                "id": "[parameters('subnetId')]"
                            }
                        }
                    }
                ],
                "frontendIPConfigurations": [
                    {
                        "name": "appGatewayFrontendIP",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[parameters('publicIPId')]"
                            }
                        }
                    }
                ],
                "frontendPorts": "[parameters('frontEndPorts')]",
                "backendAddressPools": [
                    {
                        "name": "appGatewayBackendPool",
                        "properties": {
                            "backendAddresses": []
                        }
                    }
                ],
                "backendHttpSettingsCollection": [
                    {
                        "name": "setting",
                        "properties": {
                            "port": 80,
                            "protocol": "http"
                        }
                    }
                ],
                "autoscaleConfiguration": {
                    "minCapacity": "[parameters('autoscaleMinCapacity')]",
                    "maxCapacity": "[parameters('autoscaleMaxCapacity')]"
                },
                "httpListeners": [
                    {
                        "name": "httpListener",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat(variables('applicationGatewayId'), '/frontendIPConfigurations/appGatewayFrontendIP')]"
                            },
                            "frontendPort": {
                                "id": "[concat(variables('applicationGatewayId'), '/frontendPorts/http')]"
                            },
                            "protocol": "Http"
                        }
                    }
                ],
                "requestRoutingRules": [
                    {
                        "name": "rule1",                        
                        "properties": {
                            "priority": 1,
                            "backendAddressPool": {
                                "id": "[concat(variables('applicationGatewayId'), '/backendAddressPools/appGatewayBackendPool')]"
                            },
                            "backendHttpSettings": {
                                "id": "[concat(variables('applicationGatewayId'), '/backendHttpSettingsCollection/setting')]"
                            },
                            "httpListener": {
                                "id": "[concat(variables('applicationGatewayId'), '/httpListeners/httpListener')]"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "aagId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/applicationGateways', parameters('aagName'))]"
        }
    }
}